detect_language = ->
  if window.navigator? && window.navigator.language?
    window.navigator.language.substr 0, 2
  else if window.clientInformation?
    window.clientInformation.browserLanguage.substr 0, 2
  else
    'en'

@ICRMClient =
  TestHelpers: {}
  Widget: {}
  Chat: {}
  Notifications: {}
  Suggestion: {}
  Problem: {}
  history_count: 20
  version: '<%= SemVer.find.to_s %>'
  locale: detect_language()
  EventBroadcaster: {}

console.log 'Convead widget version: ' + @ICRMClient.version
